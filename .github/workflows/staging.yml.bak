
# This is a basic workflow to help you get started with Actions

name: Staging Deployment

# Controls when the workflow will run
on:
  # Triggers the workflow on push or pull request events but only for the staging branch
  push:
    # branches: [ staging ]
  #pull_request:
    #branches: [ staging ]

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# A workflow run is made up of one or more jobs that can run sequentially or in parallel
jobs:
  # This workflow contains a single job called "build"
  build:
    # The type of runner that the job will run on
    runs-on: ubuntu-latest

    # Steps represent a sequence of tasks that will be executed as part of the job
    steps:    
      - name: Configure SSH
        run: |
          mkdir -p ~/.ssh/
          echo "$SSH_KEY" > ~/.ssh/deployment.key
          chmod 600 ~/.ssh/deployment.key
          cat >>~/.ssh/config <<END
          Host deployment
            HostName $SSH_HOST
            User $SSH_USER
            IdentityFile ~/.ssh/deployment.key
            StrictHostKeyChecking no
          END
        env:
          SSH_USER: ${{ secrets.PS_SITE_USER }}
          SSH_KEY: ${{ secrets.PS_SITE_PRIVATE_KEY }}
          SSH_HOST: ${{ secrets.PS_SITE_HOST }}       
        
      - name: Getting Repo from Github
        run: | 
          ssh deployment 'cd /var/www/staging.privacysavvy.com &&
          git checkout saging
          git fetch origin staging &&
          git reset --hard origin/staging &&
          git pull origin staging && 
          git submodule init &&
          git submodule update'

      - name: Running Repo Dependencies
        run: | 
          ssh deployment 'cd /var/www/staging.privacysavvy.com &&
          export COMPOSER_ALLOW_SUPERUSER=1 &&
          composer install --no-dev'

      - name: Running Old Theme Dependencies
        run: | 
          ssh deployment 'cd /var/www/staging.privacysavvy.com/web/app/themes/privacysavvy &&
          export COMPOSER_ALLOW_SUPERUSER=1 &&
          composer update --no-dev &&
          npm install --omit=dev'
          
      - name: Running Child Theme Dependencies
        run: | 
          ssh deployment 'cd /var/www/staging.privacysavvy.com/web/app/themes/privacysavvy-child &&
          export COMPOSER_ALLOW_SUPERUSER=1 &&
          composer update --no-dev &&
          npm install --omit=dev'

      - name: Running Core Theme Dependencies
        run: | 
          ssh deployment 'cd /var/www/staging.privacysavvy.com/web/app/themes/savvy &&
          export COMPOSER_ALLOW_SUPERUSER=1 &&
          composer update --no-dev &&
          npm install --omit=dev'

      - name: Adjusting Ownership and Permissions
        run: | 
          ssh deployment 'sudo chown -R www-data:www-data /var/www/staging.privacysavvy.com'

      - name: Purge the cache
        run: | 
          ssh deployment 'rm -rf /var/www/staging.privacysavvy.com/web/app/cache/data'