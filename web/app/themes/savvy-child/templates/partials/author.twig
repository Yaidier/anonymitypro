<div class="relative overflow-hidden flex justify-between items-start border-2 border-dark-100 rounded-lg py-8 px-5 gap-5 md:flex-col">
    <div class="border border-primary-700 rounded-full shrink-0 p-1 md:mx-auto">
        <img loading="lazy" decoding="async" class="block w-20 h-20 mx-auto object-cover rounded-full" src="{{author.avatar}}" alt="{{author.name}}" >
    </div>

    <div class="w-full">
        <a href="{{ author.link }}" class="block text-size_22 font-medium capitalize text-secondary-700 no-underline md:text-center">{{ author.name }}</a>
        <div class="flex justify-start items-center text-center gap-2 mt-1.5 md:justify-center">
            {% if author.meta('twitter') %}
                <a href="{{ author.meta('twitter') }}" target="_blank" class="group block text-dark-500 no-underline">
                    {% include 'partials/icons.twig' with { icon : 'twitter', class : 'inline-block fill-secondary-700 w-4 h-4 group-hover:fill-primary-700' } %}
                </a>
            {% endif %}    
            {% if author.meta('linkedin') %}
                <a href="{{ author.meta('linkedin') }}" target="_blank" class="group block text-dark-500 no-underline">
                    {% include 'partials/icons.twig' with { icon : 'linkedin', class : 'inline-block fill-secondary-700 w-4 h-4 group-hover:fill-primary-700' } %}
                </a>
            {% endif %}
        </div>
        <div class="font-normal leading-7 mt-3 md:text-center">
            {{author.description}}
        </div>
        <a href="{{author.link}}" class="block mt-3 md:text-center">More from {{author.first_name|raw}}</a>
    </div>
</div>
