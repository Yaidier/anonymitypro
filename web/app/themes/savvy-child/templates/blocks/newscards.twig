{% set show_cta_btn = (fields.show_cta_btn is defined) ? fields.show_cta_btn : true %}
<section class="vv-newscards bg-primary-600">
    <div class="container flex flex-col py-20 md:py-10">
        <div class="flex justify-between items-center lg:flex-col">
            {% if ( fields.title ) %}
                <h3 class="font-semibold text-dark-800 capitalize">{{ fields.title }}</h3>
            {% endif %}

            {% if ( fields.btn_text != '' )  %} 
                {% include 'partials/button.twig' with {
                    theme: 'radial_gradient_svg', 
                    text: fields.btn_text,
                    url: fields.btn_link,
                    class: "whitespace-nowrap md:mt-4",
                    } only
                %}
            {% endif %}
        </div>
        <div class="flex gap-5 mt-10 md:flex-col">
            {% for item in fields.items %}
                <div class="group relative flex-1 bg-white rounded-md pb-24 transition duration-300 shadow-cards hover:duration-300 hover:transition hover:shadow-cards-hover md:w-full">
                    <a href="#">
                        <img class="block w-full object-cover h-32 rounded-t-md md:h-80" src="{{ item.image.url }}">
                    </a>
                    <div class="block px-6 pt-8">
                        <a href="#" class="text-size_19 text-secondary-800 font-semibold duration-700 group-hover:underline group-hover:underline-offset-4">{{ item.text }}</a>  
                        <div class="absolute bottom-4 w-[calc(100%_-_48px)] left-6 flex justify-between items-center mt-10">
                            <span class="font-msr text-size_17 text-dark-600 font-normal sm:text-size_15">{{ item.date }}</span>
                            {% if ( fields.show_arrow_icon == true ) %}
                                {% include 'partials/icons.twig' with { icon: 'vv-icon_arrow_right', class: ' fill-secondary-800 w-4 h-4 mr-4 duration-700 group-hover:transform group-hover:translate-x-4 group-hover:duration-700' } %}
                            {% endif %}
                        </div>
                    </div>      
                </div>
            {% endfor %}
        </div> 
    </div>
</section>
